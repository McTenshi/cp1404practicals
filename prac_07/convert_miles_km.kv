BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: ''
            id: input_miles
            on_text: app.handle_convert(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_miles_increment(input_miles.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_miles_increment(input_miles.text, -1)
