BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: ''
            id: input_miles
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_miles_increase(input_miles.text)
            Button:
                text: 'Down'
                on_press: app.handle_miles_decrease(input_miles.text)
    Button:
        text: 'Convert mi to km'
        on_press: app.handle_convert(input_miles.text)
    Label:
        color: (1, 1, 0, 1)
        text: app.output